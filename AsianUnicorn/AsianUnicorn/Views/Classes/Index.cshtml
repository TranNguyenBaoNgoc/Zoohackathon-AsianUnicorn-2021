@model IEnumerable<AsianUnicorn.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionClass)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionClass)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDClass }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDClass }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDClass })
        </td>
    </tr>
}

</table>
